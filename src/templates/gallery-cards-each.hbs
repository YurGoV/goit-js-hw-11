{{#if [1]}}
  {{#each [0]}}
    <div class="photo-card">
        <a href="{{largeImageURL}}" class="gallery__item">
            <img class="gallery__image"
                src="{{webformatURL}}"
                alt="{{tags}}" loading="lazy"
            />
        </a>
        <div class="info">
            <p class="info-item">
                <b>Likes</b>
                {{likes}}
            </p>
            <p class="info-item">
                <b>Views</b>
                {{views}}
            </p>
            <p class="info-item">
                <b>Comments</b>
                {{comments}}
            </p>
            <p class="info-item">
                <b>Downloads</b>
                {{downloads}}
            </p>
        </div>
    </div>
  {{/each}}
  {{else}}
  {{#each [0]}}
    <div class="photo-card">
      <a href="{{largeImageURL}}" class="gallery__item">
        <img class="lazyload gallery__image"
             data-src="{{webformatURL}}"
             alt="{{tags}}"
        />
      </a>
      <div class="info">
        <p class="info-item">
          <b>Likes</b>
          {{likes}}
        </p>
        <p class="info-item">
          <b>Views</b>
          {{views}}
        </p>
        <p class="info-item">
          <b>Comments</b>
          {{comments}}
        </p>
        <p class="info-item">
          <b>Downloads</b>
          {{downloads}}
        </p>
      </div>
    </div>
  {{/each}}
{{/if}}
